<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_single"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:layout_weight="6"
    android:background="#FFFFFF">
    <ImageView
    android:layout_width="0dp"
    android:layout_height="110dp"
        android:layout_weight="1.5"
    android:id="@+id/img_row"
    android:src="@drawable/hearder_image"
    android:padding="5dp"

    />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.3"
        >
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agwani_medical"
        android:textSize="18sp"
        style="bold"
       android:layout_marginTop="15dp"
       android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/txt2"
        style="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_alignRight="@id/txt1"
        android:layout_alignParentRight="true"
        android:text="@string/main_bazar_himmatsar"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@id/txt1" />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_number_agwani"
        android:textSize="18sp"
        style="bold"
        android:layout_below="@id/txt2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_weight="1.2"
        android:drawableLeft="@drawable/ic_rating"
        android:drawablePadding="4dp"
        android:textSize="15sp"
        android:textColor="#ffca28"
        android:text="4.5"

        android:drawableStart="@drawable/ic_rating" />
</LinearLayout>